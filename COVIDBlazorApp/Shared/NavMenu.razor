<div class="top-row pl-4 navbar navbar-dark">
    <a class="navbar-brand" href="">COVID Blazor App</a>
    <button class="navbar-toggler" @onclick="ToggleNavMenu">
        <span class="navbar-toggler-icon"></span>
    </button>
</div>

<div class="@NavMenuCssClass" @onclick="ToggleNavMenu">
    <ul class="nav flex-column">
        <li class="nav-item px-3">
            <NavLink class="nav-link" href="" Match="NavLinkMatch.All">
                <span class="oi oi-home" aria-hidden="true"></span> Home
            </NavLink>
        </li>
        <li class="nav-item px-3">
            <NavLink class="nav-link" href="us-history">
                <span class="oi oi-globe" aria-hidden="true"></span> United States
            </NavLink>
        </li>
        <li class="nav-item px-3">
            <NavLink class="nav-link" href="states-current">
                <span class="oi oi-map" aria-hidden="true"></span> States
            </NavLink>
        </li>
        <li class="nav-item px-3">
            <NavLink class="nav-link" href="state-history">
                <span class="oi oi-magnifying-glass" aria-hidden="true"></span> State Detail
            </NavLink>
        </li>
        <li class="nav-item px-3">
            <NavLink class="nav-link" href="about">
                <span class="oi oi-people" aria-hidden="true"></span> About Us
            </NavLink>
        </li>
    </ul>
</div>

@code {
    private bool collapseNavMenu = true;

    private string NavMenuCssClass => collapseNavMenu ? "collapse" : null;

    private void ToggleNavMenu()
    {
        collapseNavMenu = !collapseNavMenu;
    }
}
